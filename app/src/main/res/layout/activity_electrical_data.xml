<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1EEEE">
        <include
            layout="@layout/toolbar"
            android:id="@+id/action_electrical"/>
        <RelativeLayout
            android:id="@+id/net_rela"
            android:layout_below="@id/action_electrical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FCFAFA"
            >
        <TextView
            android:id="@+id/textnet"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="NETWORKING"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20dp"
            />
            <Button
                android:id="@+id/button_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Start"
                android:padding="10dp"
                android:layout_marginLeft="70dp"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_below="@id/textnet"/>
            <ImageView
                android:id="@+id/image_net"
                android:layout_toRightOf="@+id/textnet"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/networking"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:padding="0dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
      <RelativeLayout
            android:id="@+id/plc_rela"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/net_rela"
            android:layout_marginTop="10dp"
          android:layout_marginRight="10dp"
            android:background="#FEFFFE"
            android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/textplc"
            android:layout_width="190dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="PLC / SCADA"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20dp"
            />
          <Button
              android:id="@+id/button_plc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimary"
              android:layout_marginTop="3dp"
              android:text="Start"
              android:padding="10dp"
              android:layout_marginLeft="70dp"
              android:textColor="#fff"
              android:textSize="20dp"
              android:layout_below="@id/textplc"/>
          <ImageView
              android:id="@+id/image_plc"
              android:layout_toRightOf="@id/textplc"
              android:layout_width="100dp"
              android:layout_height="90dp"
              android:layout_marginTop="10dp"
              android:src="@drawable/scada"
              android:padding="7dp"
              android:layout_marginLeft="20dp"/>
        </RelativeLayout>
          <RelativeLayout
             android:id="@+id/matlab_rela"
              android:layout_width="match_parent"
              android:layout_height="100dp"
             android:background="#FCFAFA"
             android:layout_below="@+id/plc_rela"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
              android:layout_marginRight="10dp">
          <TextView
              android:id="@+id/textmat"
              android:layout_width="190dp"
              android:layout_marginTop="3dp"
              android:layout_marginLeft="20dp"
              android:layout_height="wrap_content"
              android:text="MATLAB"
              android:gravity="center"
              android:padding="10dp"
              android:textColor="#000"
              android:textSize="20dp"
              />

              <Button
                  android:id="@+id/button_mat"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/textmat"
                  android:layout_marginLeft="70dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="76dp"
                  android:background="@color/colorPrimary"
                  android:padding="10dp"
                  android:text="Start"
                  android:textColor="#fff"
                  android:textSize="20dp" />
              <ImageView
                  android:id="@+id/iamge_matlab"
                  android:layout_toRightOf="@id/textmat"
                  android:layout_width="100dp"
                  android:layout_height="90dp"
                  android:padding="10dp"
                  android:src="@drawable/matlabtrans"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="20dp"/>
          </RelativeLayout>
         <RelativeLayout
            android:id="@+id/sap_rela"
           android:layout_width="150dp"
           android:layout_height="170dp"
            android:layout_below="@id/plc_rela"
            android:background="#FCFAFA"
            android:layout_toRightOf="@id/matlab_rela"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">
           <ImageView
               android:id="@+id/image_sap"
               android:layout_width="100dp"
               android:layout_height="90dp"
               android:src="@drawable/sappng"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"
               android:padding="9dp"
               android:tint="#E53935"/>
       <TextView
           android:id="@+id/textsap"
           android:layout_below="@+id/image_sap"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="SAP"
           android:gravity="center"
           android:padding="10dp"
           android:textColor="#000"
           android:textSize="20dp"
           />
       </RelativeLayout>

        <RelativeLayout
            android:id="@+id/system_rela"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FCFAFA"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/matlab_rela"
            android:layout_marginLeft="10dp"
            >

 <TextView
     android:id="@+id/embedtext"
     android:layout_width="190dp"
     android:layout_marginLeft="20dp"
     android:layout_height="wrap_content"
     android:textColor="#000"
     android:text="EMBEDDED SYSTEM"
     android:layout_marginTop="3dp"
     android:gravity="center"
     android:padding="7dp"
     android:textSize="20dp"
     />

            <Button
                android:id="@+id/button_embedded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/embedtext"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="7dp"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="Start"
                android:textColor="#fff"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/image_embedded"
                android:layout_width="100dp"
                android:layout_toRightOf="@id/embedtext"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/embedded"
                android:padding="10dp"
                android:layout_marginLeft="20dp"/>
 </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tele_rela"
            android:layout_below="@id/system_rela"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FCFAFA"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
        <TextView
            android:id="@+id/texttele"
        android:layout_width="190dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="TELECOM"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20dp"
        />

            <Button
                android:id="@+id/button_tele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/texttele"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="Start"
                android:textColor="#fff"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/image_telecom"
                android:layout_toRightOf="@id/texttele"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/telecompng"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/internet_rela"
            android:layout_below="@+id/tele_rela"
            android:layout_marginTop="10dp"
            android:background="#FCFAFA"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="100dp"
            >
        <TextView
            android:id="@+id/textiot"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:text="INTERNET OF THINGS"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="20dp"
            android:textColor="#000"
            />

            <Button
                android:id="@+id/button_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textiot"
                android:layout_marginTop="3dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="70dp"
                android:padding="10dp"
                android:text="Start"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image_internet"
                android:layout_toRightOf="@id/textiot"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/internet"
                android:padding="5dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
         <RelativeLayout
             android:id="@+id/robot_rela"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:layout_marginTop="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="20dp"
             android:background="#FCFAFA"
             android:layout_marginLeft="10dp"
             android:layout_below="@id/internet_rela"
             >

         <TextView
             android:id="@+id/textrobotics"
         android:layout_width="190dp"
         android:layout_height="wrap_content"
         android:text="ROBOTICS"
             android:layout_marginTop="3dp"
             android:layout_marginLeft="20dp"
         android:gravity="center"
             android:textColor="#000"
         android:padding="10dp"
         android:textSize="20dp"
         />
             <Button
                 android:id="@+id/button_robotics"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@color/colorPrimary"
                 android:layout_marginTop="3dp"
                 android:text="Start"
                 android:padding="10dp"
                 android:layout_marginLeft="70dp"
                 android:textColor="#fff"
                 android:textSize="20dp"
                 android:layout_below="@id/textrobotics"/>

             <ImageView
                 android:id="@+id/image_robot"
                 android:layout_toRightOf="@id/textrobotics"
                 android:layout_width="100dp"
                 android:layout_height="90dp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:padding="5dp"
                 android:src="@drawable/robottrans"/>
         </RelativeLayout>
    </RelativeLayout>
</ScrollView>