<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        layout="@layout/toolbar"
        android:id="@+id/action"
        />
        <RelativeLayout
            android:layout_below="@+id/action"
            android:id="@+id/autocad_rela"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/image_auto"
                android:layout_marginTop="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/autocad"
                android:padding="13dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#FDFDFD"
                />
        <TextView
            android:id="@+id/textautocad"
            android:layout_below="@+id/image_auto"
            android:layout_width="match_parent"
            android:textColor="#FDFDFD"
            android:layout_height="wrap_content"
            android:text="AUTOCAD"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="18dp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/staad_rela"
            android:layout_toRightOf="@+id/autocad_rela"
            android:layout_below="@+id/action"
            android:layout_marginTop="20dp"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/iamge_staad"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/staadpro"
                android:layout_marginTop="10dp"
                android:padding="13dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#FDFDFD"
                android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/textstaad"
            android:layout_below="@+id/iamge_staad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STAAD PRO"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FDFDFD"
            android:textSize="18dp"
            />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/revit_rela"
         android:layout_width="170dp"
         android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/autocad_rela"
         android:orientation="horizontal">
         <ImageView
             android:id="@+id/image_revit"
             android:layout_width="90dp"
             android:layout_height="90dp"
             android:layout_marginTop="10dp"
             android:background="@drawable/circle_background"
             android:backgroundTint="#FDFDFD"
             android:src="@drawable/revita"
             android:padding="13dp"
             android:layout_marginLeft="35dp"/>
     <TextView
         android:id="@+id/textrevit"
         android:layout_below="@+id/image_revit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="REVIT ARCHITECTURE"
         android:gravity="center"
         android:textStyle="bold"
         android:textColor="#FDFDFD"
         android:padding="10dp"
         android:textSize="18dp"
         />
     </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ds_max_rela"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/staad_rela"
        android:layout_toRightOf="@id/revit_rela">

        <ImageView
            android:id="@+id/image_ds"
            android:layout_width="90dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FDFDFD"
            android:background="@drawable/circle_background"
            android:layout_height="90dp"
            android:src="@drawable/dsmax"
            android:padding="13dp"
            android:layout_marginLeft="25dp"/>
    <TextView
        android:id="@+id/textds"
        android:layout_below="@id/image_ds"
    android:layout_width="match_parent"
        android:textColor="#FDFDFD"
        android:textStyle="bold"
    android:layout_height="wrap_content"
    android:text="3DS-MAX"
    android:gravity="center"
    android:padding="10dp"
    android:textSize="18dp"
   />
    </RelativeLayout>
    </RelativeLayout>
