<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skyback"
    tools:context=".Activities.LoginPage">
    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LOGIN"
        android:textFontWeight="6"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="#FDFDFD"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"

        />
    <RelativeLayout
        android:layout_below="@id/text_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:outlineSpotShadowColor="#000"
        android:background="#FDFDFD">
<ImageView
    android:id="@+id/user"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/circle_background"
    android:backgroundTint="#3A9CF3"
    android:padding="10dp"
    android:baseline="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:src="@drawable/login"/>
        <EditText
            android:id="@+id/email_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:layout_below="@id/user"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#A29494"
            android:textColor="#000"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/pass_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="Password"
            android:layout_below="@id/email_edit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#A29494"
            android:textColor="#000"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pass_edit"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textFontWeight="8"
            android:layout_marginRight="30dp"
            android:text="Login"
            android:textSize="20dp"
            android:textColor="#F5E9E9"
            android:background="@drawable/roundbtndesign"
            android:backgroundTint="#3A9CF3"/>
        <LinearLayout
            android:layout_below="@id/login_btn"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account yet?"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/signup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="20dp"
                android:textSize="18dp"
                />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>