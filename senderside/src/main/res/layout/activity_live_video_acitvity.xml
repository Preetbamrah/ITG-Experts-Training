<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LiveVideoAcitvity">
    <include
        layout="@layout/toolbar"
        android:id="@+id/live_toolbar"/>
    <VideoView
        android:id = "@+id/live_video_view"
        android:layout_below = "@+id/live_toolbar"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="250dp" />
    <ListView
        android:id ="@+id/live_list_view"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_below ="@+id/live_video_view"
        />
</RelativeLayout>