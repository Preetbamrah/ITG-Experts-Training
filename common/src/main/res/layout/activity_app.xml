<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteCardColor"
    tools:context=".activities.AppActivity">
        <include
            layout="@layout/toolbar_activity"
            android:id="@+id/toolbar_app"
            />

        <Button
            android:elevation="@dimen/_15sdp"
            android:layout_below="@id/toolbar_app"
            android:id="@+id/training_app_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="@dimen/_80sdp"
            android:text="ITG Training Experts"
            android:background="@drawable/roundbtndesign"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FDFDFD"
            />

        <Button
            android:id="@+id/development_app_btn"
            android:layout_below="@id/training_app_btn"
            android:layout_marginTop="@dimen/_50sdp"
            android:elevation="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="@dimen/_80sdp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/roundbtndesign"
            android:text="ITG Development Experts"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FDFDFD"/>
</RelativeLayout>