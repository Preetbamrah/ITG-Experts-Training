<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppActivity">
        <include
            layout="@layout/toolbar_activity"
            android:id="@+id/toolbar_app"
            />
    <android.support.v7.widget.CardView
        android:id="@+id/training_card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="5dp"
        android:layout_below="@id/toolbar_app"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <Button
            android:id="@+id/training_app_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ITG Training Experts"
            android:background="@color/colorPrimary"
            android:textSize="25dp"
            android:textColor="#FDFDFD"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/paid_app_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/training_card_view"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/development_app_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:text="ITG Development Experts"
            android:textSize="25dp"
            android:textColor="#FDFDFD"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>