<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_profile"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0f3245"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/textusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/user_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#24a1fa"
        android:orientation="vertical">
        <!--65C9CC-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email Address"
            android:padding="10dp"
            android:textSize="18dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="7dp"
            android:textColor="#0f3245"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textemail"
            android:textSize="16dp"
            android:layout_marginLeft="7dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:textColor="#fafcfd"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textchangepassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:textSize="17dp"
            android:padding="10dp"
            android:text="Change Password"
            android:layout_marginRight="20dp"
            android:textColor="#0f3245"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#24a1fa">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/resume_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Create Resume"
                android:textColor="#0f3245"
                android:textSize="17dp"
                android:padding="10dp"/>
                <ImageView
                    android:id="@+id/right_image"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:src="@drawable/right_icon"
                    android:tint="#0f3245"
                    android:layout_toRightOf="@+id/resume_text">

                </ImageView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textlogout"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:textSize="17dp"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:text="Logout"
            android:textColor="#0f3245"/>


    </LinearLayout>
</LinearLayout>
</ScrollView>