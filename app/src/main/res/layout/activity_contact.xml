<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteCardColor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_contact"/>
    <android.support.v7.widget.CardView
        android:id="@+id/call_hr"
        android:layout_below="@id/toolbar_contact"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardElevation="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/hr_relative"
        android:layout_below="@+id/toolbar_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">
        <ImageView
            android:id="@+id/image_no"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/whiteCardColor"
            android:padding="13dp"
            android:src="@drawable/contact"
            android:tint="@color/colorPrimary"/>
        <TextView
            android:id="@+id/text_callhr"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_no"
            android:gravity="center"
            android:text="CALL NOW"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/hr"
            android:layout_toRightOf="@id/image_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:padding="5dp"
            android:text="9700009148"
            android:textColor="#000"
            android:layout_below="@+id/text_callhr"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/call_institue"
        android:layout_below="@id/call_hr"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardElevation="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/itg_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">
        <ImageView
            android:id="@+id/image_itg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/whiteCardColor"
            android:src="@drawable/contact"
            android:tint="@color/colorPrimary"
            android:padding="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/text_callitg"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_itg"
            android:gravity="center"
            android:text="CALL NOW"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#000"/>
    <TextView
        android:id="@+id/itg"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_itg"
        android:layout_below="@id/text_callitg"
        android:layout_marginLeft="@dimen/_40sdp"
        android:text="8728039876"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center"/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@id/call_institue"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardElevation="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
    <RelativeLayout
        android:id="@+id/url_rela"
        android:layout_below="@id/call_institue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_url"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/whiteCardColor"
            android:padding="0dp"
            android:layout_centerVertical="true"
            android:tint="@color/colorPrimary"
            android:src="@drawable/broswer" />
        <TextView
            android:id="@+id/text_website"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_url"
            android:gravity="center"
            android:text="GO TO WEBSITE"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#000"/>
    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_below="@id/text_website"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_url"
        android:text="www.itgmohali.com"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:gravity="center"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
